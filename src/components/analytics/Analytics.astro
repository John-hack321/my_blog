---
// src/components/analytics/Analytics.astro
const measurementId = "G-MTF4UM0ED3";
---

<script is:inline>
  // Track page views for client-side navigation
  if (typeof window !== 'undefined') {
    const handleLocationChange = () => {
      if (window.gtag) {
        window.gtag('event', 'page_view', {
          page_path: window.location.pathname + window.location.search,
          page_title: document.title
        });
      }
    };

    // Track initial page load
    handleLocationChange();

    // Listen for subsequent page changes
    window.addEventListener('astro:page-load', handleLocationChange);
  }
</script>
